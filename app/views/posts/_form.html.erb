<%= form_with(model: @post, local: true) do |form| %>
	<% if @post.errors.any? %>
		<div id="error_explanation">
			<h4>
				<%= pluralize(@post.errors.count, "error") %>
				prohibited this post from being saved:
			</h4>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
	<% end %>
	
	<p>Upload .markdown file (<a href="https://jekyllrb.com/">JekyllÂ©</a> post format) to pre-fill the fields below.</p>
	<input type="file" id="files" name="files[]" multiple />
	<output id="list"></output>

	<p>
		<%= form.label :title %><br />
		<%= form.text_field :title %>
	</p>

	<p>
		<%= form.label :text %><br />
		<%= form.text_area(:text, size: "80x20") %>
	</p>
	
	<p>
		<%= form.label :richtext %>
		<%= form.rich_text_area :richtext %>
	</p>
	
	<p>
		<%= form.label :categories %><br />
		<%= form.text_field :categories %><br />
	</p>
	
	<p>
		<%= form.label :override_post_date %><br />
		<%= form.text_field :override_post_date %>
	</p>
	
	<p>
		<%= form.submit %>
	</p>
<% end %>
